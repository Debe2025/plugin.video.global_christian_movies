<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.global_christian_movies"
       name="Global Christian Movies"
       version="1.0.0"
       provider-name="Debe">

    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.requests" version="2.25.1"/>
        <import addon="plugin.video.youtube" version="7.0.0" optional="false"/>
        <import addon="inputstream.adaptive" version="21.4.0" optional="false"/>
    </requires>

    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>

    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Stream Christian & Gospel Movies from Around the World in Kodi</summary>
        <description lang="en_GB">
Watch Mount Zion, Flaming Sword, Evangelist Mike Bamiloye, Joshua Mike-Bamiloye, Damilola Mike-Bamiloye, and thousands of faith-based films — all free from YouTube.

• Latest 2025 releases
• Categories: Drama, Family, Revival, Testimony, Documentary
• Real-time search
• Automatic YouTube addon installation
• Works perfectly with just a free YouTube API key
        </description>
        <disclaimer>Uses only public, embeddable YouTube videos.</disclaimer>
        <language>en</language>
        <platform>all</platform>
        <license>MIT</license>
        <website>https://github.com/Debe2025/plugin.video.christian_movies</website>
        <source>https://github.com/Debe2025/plugin.video.christian_movies</source>
        <news>v1.0.0 - Official Christian Movies Addon</news>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
        <reuselanguageinvoker>true</reuselanguageinvoker>
    </extension>
</addon>