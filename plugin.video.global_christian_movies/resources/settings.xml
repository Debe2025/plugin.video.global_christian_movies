<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<settings>

    <category label="API Keys">
        <!-- YouTube is REQUIRED for the addon to work -->
        <setting id="youtube_api_key" 
                 type="text" 
                 label="YouTube Data API v3 Key (REQUIRED)" 
                 default=""/>
        <setting type="lsep" 
                 label="Get free key → https://console.cloud.google.com/apis/credentials"/>
        <setting type="sep"/>
        
        <!-- TMDB is 100% OPTIONAL -->
        <setting id="tmdb_api_key" 
                 type="text" 
                 label="TMDB API Key (Optional - for better posters & plots)" 
                 default=""/>
        <setting type="lsep" 
                 label="Leave empty = works perfectly with YouTube thumbnails only"/>
        <setting type="lsep" 
                 label="Get free key → https://www.themoviedb.org/settings/api"/>
        <setting type="sep"/>
    </category>

    <category label="Features">
        <setting id="enable_search" 
                 type="bool" 
                 label="Enable Search" 
                 default="true"/>
        <setting id="show_adult" 
                 type="bool" 
                 label="Include Adult Content (18+)" 
                 default="false"/>
        <setting type="sep"/>
        <setting label="Nollywood Movies Addon v1.0.0 • 2025" 
                 type="lsep" 
                 option="readonly"/>
    </category>

</settings>
