<?xml version="1.0" encoding="UTF-8"?>
<dependencies>
    <!-- Automatically install the official YouTube addon on first run -->
    <dependency id="plugin.video.youtube" optional="false">
        <version>7.0.0</version>
        <source>repository.xbmc.org</source>
    </dependency>

    <!-- Required for YouTube addon to work -->
    <dependency id="inputstream.adaptive" optional="false">
        <version>21.0.0</version>
        <source>repository.xbmc.org</source>
    </dependency>

    <!-- Optional: script.module.requests (usually already installed) -->
    <dependency id="script.module.requests" optional="true"/>
</dependencies>